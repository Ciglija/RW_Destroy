<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5">

    <!-- Slika na vrhu ekrana -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        android:src="@drawable/reisswolflogo" />

    <!-- Razmak između slike i forme -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Polje za unos korisničkog imena -->

    <!-- Polje za unos lozinke -->
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/baseline_man_24"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColorHint="#003366" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#003366"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:padding="20dp" />

    <!-- Link za zaboravljenu lozinku -->
    <TextView
        android:id="@+id/forgetPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password?"
        android:textColor="#003366"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_marginEnd="35dp" />

    <!-- Dugme za prijavu -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="LOGIN"
        android:textColor="#FFF"
        android:background="#003366"
        android:layout_marginTop="20dp" />

</LinearLayout>