<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Slika na vrhu ekrana -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/reisswolflogo"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true" />

    <!-- Razmak između slike i dugmadi -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <!-- Dugmad u sredini ekrana -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ucitaj_bazu"
        android:text="Učitaj Bazu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_unistavanje"
        android:text="Uništavanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_zavrsi"
        android:text="Završi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kreiraj_izvestaj"
        android:text="Kreiraj Izveštaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Status skeniranja -->
    <TextView
        android:id="@+id/status_skeniranja"
        android:text="Status: Nema očitavanja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp" />

</LinearLayout>